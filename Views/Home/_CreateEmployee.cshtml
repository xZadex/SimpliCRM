@model Employee
@{string? businessName = Context.Session.GetString("BusinessName");}
<form asp-action="CreateEmployee" asp-controller="Home" asp-route-name="@businessName" method="post">
    <div class="new-employee-container">
        <div class="form-group">
            <span asp-validation-for="FirstName" class="validation-error"></span><br>
            <label asp-for="FirstName">First Name:</label>
            <input asp-for="FirstName" class="form-control">
        </div>
        <div class="form-group">
            <span asp-validation-for="LastName" class="validation-error"></span><br>
            <label asp-for="LastName">Last Name:</label>
            <input asp-for="LastName" class="form-control">
        </div>
        <div class="form-group">
            <span asp-validation-for="Email" class="validation-error"></span><br>
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" class="form-control">
        </div>
        <div class="form-group">
            <span asp-validation-for="Role" class="validation-error"></span><br>
            <label asp-for="Role">Role:</label>
            <select asp-for="Role" class="form-select">
                <option selected hidden disabled>Choose Role</option>
                <option value="Sales">Sales</option>
                <option value="CSR">Customer Service</option>
                <option value="HR">Human Resources</option>
            </select>
        </div>
        <div class="form-group">
            <span asp-validation-for="Birthday" class="validation-error"></span><br>
            <label asp-for="Birthday">Birthday:</label>
            <input asp-for="Birthday" class="form-control">
        </div>
        <div class="form-group">
            <span asp-validation-for="Password" class="validation-error"></span><br>
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" class="form-control">
        </div>
        @* <div class="form-group">
            <span asp-validation-for="Confirm" class="validation-error"></span><br>
            <label asp-for="Confirm">Confirm Password:</label>
            <input asp-for="Confirm" class="form-control">
        </div> *@
        <div class="mt-3">
            <button class="new-employee-button pt-2 pb-2">Create Employee</button>
        </div>
    </div>
</form>